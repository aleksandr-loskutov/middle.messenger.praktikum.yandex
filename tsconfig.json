{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types", "types/app.d.ts"],
      "paths": {
          "core/*": ["core/*"],
          "pages/*": ["pages/*"],
          "components/*": ["components/*"],
          "utils/*": ["utils/*"],
          "css/*": ["css/*"],
          "types/*": ["types/*"],
          "services/*": ["services/*"],
          "api/*": ["api/*"]
      }
  }
}
