{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types", "types/app.d.ts"],
    "importHelpers": true,
      "paths": {
          "src/*": ["./src/*"],
          "core/*": ["./core/*"],
          "pages/*": ["./pages/*"],
          "components/*": ["./components/*"],
          "utils/*": ["./utils/*"],
          "css/*": ["./css/*"],
          "types/*": ["./types/*"],
          "services/*": ["./services/*"],
          "api/*": ["./api/*"]
      }
  },
    "ts-node": {
        "transpileOnly": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "index.js"]
}
