{
  "name": "web-messenger",
  "version": "1.0.0",
  "description": "",
  "author": "AleksandrL",
  "license": "ISC",
  "engine": {
    "node": "16.15.0"
  },
  "alias": {
    "core": "./src/core",
    "pages": "./src/pages",
    "components": "./src/components",
    "utils": "./src/utils",
    "css": "./src/css",
    "types": "./src/types",
    "services": "./src/services",
    "api": "./src/api"
  },
  "scripts": {
    "start": "webpack serve",
    "build": "webpack --node-env=production",
    "build-dev": "webpack",
    "serve": "node app.js",
    "test": "ts-mocha -p tsconfig.json --paths src/**/*.spec.ts",
    "lint": "eslint --ext .js,.ts --fix ./src --ignore-pattern node_modules/",
    "stylelint": "stylelint --fix \"./src/**/*.scss\"",
    "lint:all": "npm run lint && npm run stylelint",
    "clear": "rd /s /q dist",
    "prepare": "husky install"
  },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint:all"
        }
    },
  "devDependencies": {
    "@types/chai": "4.3.3",
    "@types/mocha": "9.1.1",
    "@types/node": "18.6.3",
    "@typescript-eslint/eslint-plugin": "5.31.0",
    "@typescript-eslint/parser": "5.31.0",
    "chai": "4.3.6",
    "css-loader": "6.7.1",
    "eslint": "8.21.0",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.1",
    "image-webpack-loader": "8.1.0",
    "mini-css-extract-plugin": "2.6.1",
    "postcss": "8.4.16",
    "postcss-loader": "7.0.1",
    "postcss-preset-env": "7.8.1",
    "prettier": "2.7.1",
    "sass-loader": "13.0.2",
    "style-loader": "3.3.1",
    "stylelint": "14.9.1",
    "stylelint-config-standard": "26.0.0",
    "stylelint-scss": "4.3.0",
    "ts-loader": "9.3.1",
    "ts-mocha": "10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.7.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.11.0"
  },
  "dependencies": {
    "express": "4.18.1",
    "handlebars": "4.7.7",
    "nanoid": "4.0.0"
  }
}
